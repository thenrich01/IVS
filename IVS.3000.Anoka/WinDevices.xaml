        <Button Name="cmdSave" Content="Save" Margin="235,260,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" />
        <Button Name="cmdCancel" Content="Close" Margin="340,260,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" />
    </Grid>
</Window>
