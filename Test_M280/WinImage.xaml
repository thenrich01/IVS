<Window x:Class="WinImage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="WinImage" Height="300" Width="320">
    <Grid>
        <Image Height="180" Margin="5,10,0,0" Name="imgScannedDocument" Stretch="Fill" VerticalAlignment="Top" HorizontalAlignment="Left" Width="288" Source="{Binding Path=MyImaeSource}" />
        <TextBox Height="35" HorizontalAlignment="Left" Margin="8,226,0,0" Name="TextBox1" VerticalAlignment="Top" Width="285" />
        <Button Content="Capture" Height="23" HorizontalAlignment="Left" Margin="12,197,0,0" Name="cmdCapture" VerticalAlignment="Top" Width="75" />
    </Grid>
</Window>
